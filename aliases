# REMOVE EXISTING ALIASES

unalias -a

# GENERAL ALIASES

alias ..="cd .."
alias ~="cd ~"
alias -- -="cd -"

alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'

alias chmox='chmod -x'

alias where=which

alias c="clear"

# FILE DISPLAY AND ALIASES

if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color"
else # OSX `ls`
    colorflag="-G"
fi

alias l="ls -lF ${colorflag}"
alias la="ls -laF ${colorflag}"
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"
alias ls="command ls ${colorflag}"

unset colorflag

# GIT ALIASES

alias gs="git status"

alias gcl="git clone"

alias gaa="git add -A"

alias gcm="git commit -v -m"
alias gci="git commit --interactive"

alias gco="git checkout"
alias gcob="git checkout -b"

alias gb="git branch"
alias gba="git branch -a"
alias gbd="git branch -D"

alias gm="git merge"

alias gl="git pull"
alias glo="git pull origin"
alias glr="git pull --rebase"

alias gfr="git fetch && git rebase"

alias gp="git push"
alias gpo="git push origin"

alias gcp="git cherry-pick"

alias gd="git diff"

alias glog="git log --abbrev-commit"
alias glogp="git log --graph --pretty=oneline --abbrev-commit"
alias glogv="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias ggs="glogv --stat"

alias grpo="git remote prune origin"

alias gcch="git config credential.helper 'cache --timeout=1800'"

# OSX ALIASES

alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
